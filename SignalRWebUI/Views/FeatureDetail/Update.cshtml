@model UpdateFeatureDetailDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan Detay İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="card-title">Öne Çıkan Alan Güncelle</div>
                            <input type="checkbox" data-toggle="toggle" data-onstyle="info" data-style="btn-round" id="state" asp-for="State">
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="title">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="title" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="Description" id="description" placeholder="Açıklama Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="maintitle">Üst Başlık</label>
                                @Html.DropDownListFor(x => x.FeatureId, ViewBag.Features as List<SelectListItem>, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

