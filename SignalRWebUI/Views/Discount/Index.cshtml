@model List<GetDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün indirimleri ürünleri aşağıda yer almaktadır. Tema bütünlüğü için sadece 2 tane indirimli ürün seçiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Amount</td>
                                        <td>@item.State</td>
                                        <td><a href="/Discount/Delete/@item.Id" class="btn btn-danger btn-border btn-round">Sil</a></td>
                                        <td><a href="/Discount/Update/@item.Id" class="btn btn-success btn-border btn-round">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <td><a href="/Discount/Create/" class="btn btn-outline-primary">Yeni Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>