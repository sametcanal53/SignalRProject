@model UpdateDiscountDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="card-title">İndirimli Ürün Güncelle</div>
                            <input type="checkbox" data-toggle="toggle" data-onstyle="info" data-style="btn-round" id="state" asp-for="State">
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="title">Ürün Adı</label>
                                <input type="text" class="form-control" asp-for="Title" id="title" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="amount">İndirim Oranı</label>
                                <input type="text" class="form-control" asp-for="Amount" id="amount" placeholder="İndirim Oranı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Görsel</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl" placeholder="Görsel Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="Description" id="description" placeholder="Açıklama Giriniz"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

