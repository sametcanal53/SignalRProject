@model UpdateTestimonialDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="card-title">Müşteri Yorum Güncelle</div>
                            <input type="checkbox" data-toggle="toggle" data-onstyle="info" data-style="btn-round" id="state" asp-for="State">
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Status" />
                            <div class="form-group">
                                <label for="name">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Name" id="name" placeholder="Ad Soyad Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="title">Unvan</label>
                                <input type="text" class="form-control" asp-for="Title" id="title" placeholder="Unvan Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Resim Linki</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl" placeholder="Resim Linki Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="comment">Yorum</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment" placeholder="Yorum Giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

