@model UpdateNotificationDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="card-title">Bildirim Güncelle</div>
                            <input type="checkbox" data-toggle="toggle" data-onstyle="info" data-style="btn-round" id="state" asp-for="State">
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Date" />
                            <input type="hidden" asp-for="IsRead" />
                            <div class="form-group">
                                <label for="type">Tipi</label>
                                @Html.DropDownListFor(x => x.Type, new SelectList(Enum.GetValues(typeof(SignalR.Core.Enums.EnumNotificationType))), new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="icon">İkon</label>
                                @Html.DropDownListFor(x => x.Icon, new SelectList(Enum.GetValues(typeof(SignalR.Core.Enums.EnumIcon))), new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="Description" id="description" placeholder="Açıklama Giriniz"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



