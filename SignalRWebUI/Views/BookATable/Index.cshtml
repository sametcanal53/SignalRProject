@model CreateBookingDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeaderComponentPartial")

<body class="sub_page">
    @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Yapın
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div>
                                <input type="text" class="form-control" placeholder="Ad Soyad Giriniz" asp-for="Name" />
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Telefon Numarası Giriniz" asp-for="Phone" />
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Email Adresi Giriniz" asp-for="Email" />
                            </div>
                            <div>
                                <select class="form-control nice-select wide" asp-for="PersonCount">
                                    <option value="" disabled selected>
                                        Kaç Kişisiniz?
                                    </option>
                                    @foreach (var item in Enumerable.Range(1, 7))
                                    {
                                        <option value="@item">
                                            @item
                                        </option>
                                    })
                                </select>
                            </div>
                            <div>
                                <input type="date" class="form-control" asp-for="Date">
                            </div>
                            <div class="btn_box">
                                <button onclick="addBookATable()">
                                    Yerinizi Ayırtın
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <div id="googleMap"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

    <script>
        function addBookATable() {
            $.ajax({
                type: "POST",
                contentType: "application/json;",
                success: function () {
                    swal("", "Rezervasyon işleminiz başarıyla tamamlanmıştır!", "success");
                },
            });
        }
    </script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


</body>


</html>