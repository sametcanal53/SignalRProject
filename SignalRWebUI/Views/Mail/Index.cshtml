@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="receiver">Alıcı</label>
                                <input type="text" class="form-control" asp-for="Receiver" id="receiver" placeholder="Alıcının Adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="receiverMail">Alıcı Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="ReceiverMail" id="receiverMail" placeholder="Alıcının Mailini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="subject">Konu</label>
                                <input type="text" class="form-control" asp-for="Subject" id="subject" placeholder="Konu Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="body">Mesaj</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="Body" id="body" placeholder="Mesajınızı Giriniz"></textarea>
                            </div>
                            
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>