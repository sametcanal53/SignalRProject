@{
    Layout = null;
}


<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeaderComponentPartial")

<body class="sub_page">
    @await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
    </div>
    <section class="food_section layout_padding">
        <div class="container">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12">
                        <h3 class="text-center mb-4">SignalR Restaurant Anlık Mesajlaşma</h3>
                    </div>
                </div>

                <div class="row p-1">
                    <div class="col-2">Kullanıcı Adınız</div>
                    <div class="col-10">
                        <input type="text" id="userInput" class="form-control" placeholder="Kullanıcı Adınızı Giriniz" />
                    </div>
                </div>

                <div class="row p-1">
                    <div class="col-2">Mesajınız</div>
                    <div class="col-10">
                        <textarea rows="3" type="text" class="form-control" id="description" placeholder="Açıklama Giriniz"></textarea>
                    </div>
                </div>

                <div class="row p-1">
                    <div class="col-2"></div>
                    <div class="col-10">
                        <input type="button" id="sendButton" class="form-control btn btn-success" value="Gönder" />
                    </div>
                </div>

                <div class="row p-1">
                    <div class="col-12">
                        <hr />
                    </div>
                </div>

                <div class="row p-1">
                    <div class="col-12">
                        <ul id="messages" class="list-group"></ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
</body>


</html>