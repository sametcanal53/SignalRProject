}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

<script type="text/javascript">

    $(document).ready(() => {

        var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:5353/SignalRHub").build();
        connection.start().then(() => {
            setInterval(() => {
                connection.invoke("SendStatistics");
            }, 1000);
        }).catch((err) => { console.log(err) });

        connection.on("ReceiveProductCount", (result) => {
            $("#productCount").text(result);
        });
        connection.on("ReceiveCategoryCount", (result) => {
            $("#categoryCount").text(result);
        });
        connection.on("ReceiveActiveCategoryCount", (result) => {
            $("#activeCategoryCount").text(result);
        });
        connection.on("ReceivePassiveCategoryCount", (result) => {
            $("#passiveCategoryCount").text(result);
        });
        connection.on("ReceiveProductCountByCategoryNameHamburger", (result) => {
            $("#productCountByCategoryNameHamburger").text(result);
        });
        connection.on("ReceiveProductCountByCategoryNameDrink", (result) => {
            $("#productCountByCategoryNameDrink").text(result);
        });
        connection.on("ReceiveProductPriceAvg", (result) => {
            $("#productPriceAvg").text(result);
        });
        connection.on("ReceiveProductNameByMaxPrice", (result) => {
            $("#productNameByMaxPrice").text(result);
        });
        connection.on("ReceiveProductNameByMinPrice", (result) => {
            $("#productNameByMinPrice").text(result);
        });
        connection.on("ReceiveProductPriceAvgByHamburger", (result) => {
            $("#productPriceAvgByHamburger").text(result);
        });
        connection.on("ReceiveTotalOrderCount", (result) => {
            $("#totalOrderCount").text(result);
        });
        connection.on("ReceiveActiveTotalOrderCount", (result) => {
            $("#activeTotalOrderCount").text(result);
        });
        connection.on("ReceiveLastOrderPrice", (result) => {
            $("#lastOrderPrice").text(result);
        });
        connection.on("ReceiveTotalMoneyCaseAmount", (result) => {
            $("#totalMoneyCaseAmount").text(result);
        });
        connection.on("ReceiveTodayTotalMoneyCaseAmount", (result) => {
            $("#todayTotalMoneyCaseAmount").text(result);
        });
        connection.on("ReceiveMenuTableCount", (result) => {
            $("#menuTableCount").text(result);
        });
    })
</script>


