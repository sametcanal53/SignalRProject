@model UpdateContactDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="card-title">İletişim Bilgisi Güncelle</div>
                            <input type="checkbox" data-toggle="toggle" data-onstyle="info" data-style="btn-round" id="state" asp-for="State">
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="location">Konum</label>
                                <input type="text" class="form-control" asp-for="Location" id="location" placeholder="Konum Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="email">EMail</label>
                                <input type="email" class="form-control" asp-for="Email" id="email" placeholder="E-Mail Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone" placeholder="Telefon Numarası Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="footerTitle">Alt Başlık</label>
                                <input type="text" class="form-control" asp-for="FooterTitle" id="footerTitle" placeholder="Alt Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="footerDescription">Alt Başlık Açıklama</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="FooterDescription" id="footerDescription" placeholder="Alt Başlık Açıklaması Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="openDays">Çalışma Günü</label>
                                <input type="text" class="form-control" asp-for="OpenDays" id="openDays" placeholder="Çalışma Günü  Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="openDaysDescription">Çalışma Günü Detayı</label>
                                <input type="text" class="form-control" asp-for="OpenDaysDescription" id="openDaysDescription" placeholder="Çalışma Günü Detayı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="openHours">Çalışma Saatleri</label>
                                <input type="text" class="form-control" asp-for="OpenHours" id="openHours" placeholder="Çalışma Saatlerini Giriniz">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

