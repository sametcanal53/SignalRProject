@model UpdateContactDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Bilgisi Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="location">Konum</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                            </div>
                            <div class="form-group">
                                <label for="email">EMail</label>
                                <input type="email" class="form-control" asp-for="Email" id="email">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama</label>
                                <textarea rows="5" type="text" class="form-control" asp-for="FooterDescription" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

