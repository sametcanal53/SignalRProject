@model List<GetContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayınız
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Konum</th>
                                    <th scope="col">E-Mail</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Alt Başlık Açıklaması</th>
                                    <th scope="col">Çalışma Günü</th>
                                    <th scope="col">Çalışma Günü Detayı</th>
                                    <th scope="col">Çalışma Saatleri</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Location</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.FooterTitle</td>
                                        <td>@item.FooterDescription</td>
                                        <td>@item.OpenDays</td>
                                        <td>@item.OpenDaysDescription</td>
                                        <td>@item.OpenHours</td>
                                        <td>@item.State</td>
                                        <td><a href="/Contact/Delete/@item.Id" class="btn btn-danger btn-border btn-round">Sil</a></td>
                                        <td><a href="/Contact/Update/@item.Id" class="btn btn-success btn-border btn-round">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <td><a href="/Contact/Create/" class="btn btn-outline-primary">Yeni Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>